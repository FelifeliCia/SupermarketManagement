@page
@model LoginModel

@{
    ViewData["Title"] = "登录";
}

<div class="text-center form-signin">
    <section>
        <form id="account" method="post">
            <h1 class="h3 mb-3 fw-normal">请登录</h1>
            <div asp-validation-summary="All" class="form-floating"></div>
            <div class="form-group">
                <label asp-for="Input.Email">账号：</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">密码：</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">登录</button>
        </form>
    </section>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
